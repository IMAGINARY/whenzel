{
  "extends": ["airbnb"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true
  },
  "globals": {
    "bootbox": true
  },
  "rules": {
    "react/jsx-one-expression-per-line": "off",
    "comma-dangle": ["error", "always-multiline", { "functions": "never" }]
  }
}
